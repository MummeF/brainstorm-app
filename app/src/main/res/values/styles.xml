<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="textViewHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewHeaderStyleSmaller" parent="textViewHeaderStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="textViewDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/buttonGrey</item>
    </style>

    <style name="textViewRoomPhase" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>
<style name="closeRoomBtnStyle">
    <item name="android:textColor">@color/red</item>
    <item name="drawableTint">@color/red</item>
    <item name="android:background">@drawable/layout_buttonbackground</item>
    <item name="backgroundTint">@color/buttonBackgroundGrey</item>
</style>
</resources>